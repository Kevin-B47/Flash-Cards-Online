<resources xmlns:tools="http://schemas.android.com/tools">


    -<style parent="Theme.AppCompat.Light.DarkActionBar" name="AppTheme">

    <!-- Customize your theme here. -->


    <item name="colorPrimaryDark">@android:color/background_dark</item>

    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:colorForeground">@android:color/white</item>

    <item name="android:colorBackground">@android:color/white</item>

    <item name="android:textColorPrimary">@android:color/black</item>

</style>


    -<style parent="AppTheme" name="BaseTheme">

    <item name="colorPrimary">@android:color/holo_red_light</item>

</style>


    -<style name="MainText">

    <item name="android:textSize">40dp</item>

    <item name="android:textColor">#000000</item>

    <item name="android:layout_width">wrap_content</item>
    >
    <item name="android:layout_height">wrap_content</item>

</style>

    <!--For Main Menu Selection-->


    <style name="shadowText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>



    -<style name="MenuOptions_ButtonStyle">

    <item name="android:textColor">#ffff</item>

    <item name="android:textSize">25dp</item>

    <item name="android:textAlignment">center</item>

    <item name="android:fontFamily">sans-serif-smallcaps</item>

    <item name="android:layout_width">120dp</item>

    <item name="android:layout_height">80dp</item>

    <item name="android:background">@color/colorPrimary</item>

</style>

    <!--For Play Solo Activity//Card Selection-->


    <!--Can also be used for the following activities: "Collections","Edit","Card Edit"-->



    <style name="PlaySolo_ButtonStyle">

        <item name="android:textColor">#ffff</item>

        <item name="android:textSize">25dp</item>

        <item name="android:layout_width">120dp</item>

        <item name="android:layout_height">50dp</item>

        <item name="android:fontFamily">sans-serif-smallcaps</item>

        <item name="android:background">@null</item>

    </style>

    <!--For buttons that revert back to main menu or quit action -->



    <style name="ReturnToMenu_Quit_ButtonStyle">

    <item name="android:textColor">#ffff</item>
    <item name="android:textSize">25sp</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-smallcaps</item>

    <item name="android:background">@color/colorPrimary</item>

</style>

    <style name="loginbutts">

        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>

        <item name="android:background">@color/colorPrimary</item>

    </style>

</resources>
