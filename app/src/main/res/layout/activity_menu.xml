<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitebackground"
    android:orientation="vertical"
    tools:context="com.example.android.flashcards.MenuActivity">

    <LinearLayout
        android:id="@+id/singleplayerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/solo_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/whitebackground"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/play" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/solotxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1.5"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:text="Singleplayer"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/playsolotxt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="Bring a deck into solo play"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/decklayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/deck_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/whitebackground"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/deck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/decktxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1.5"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:text="Player Deck"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/deckstxt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="Edit, create or share decks"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profilelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/whitebackground"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profiletxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1.5"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:text="Profile"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/profiletxt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="View your personalized stats"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/communitylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/community_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/whitebackground"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/download" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/communitytxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1.5"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:text="Community Decks"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/communitytxt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="Download decks from the community"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoutlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:divider="@android:color/transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logout_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:background="@color/whitebackground"
            android:divider="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-40dp"
            android:layout_weight=".2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logouttxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1.5"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:text="Logout"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/logouttxt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:text="Exit to the login screen"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
